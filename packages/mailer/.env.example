# Nostr private key (hex or nsec format)
POMADE_SECRET=your_private_key_here

# Comma-separated list of relay URLs
POMADE_RELAYS=wss://relay1.example.com,wss://relay2.example.com

# Path to SQLite database file
POMADE_DB_PATH=./pomade-mailer.db

# Provider type: "console" or "postmark"
POMADE_PROVIDER=console

# Postmark configuration (required if POMADE_PROVIDER=postmark)
# POMADE_POSTMARK_SERVER_TOKEN=your-postmark-server-token
# POMADE_POSTMARK_FROM_EMAIL=noreply@yourdomain.com
