{
  "name": "@pomade/core",
  "version": "0.0.5",
  "author": "hodlbod",
  "license": "MIT",
  "description": "Recovery protocol and implementation for nostr multisig signers.",
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">=12.0.0"
  },
  "type": "module",
  "files": [
    "dist"
  ],
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./argon-worker.js": "./dist/argon-worker.js"
  },
  "scripts": {
    "test": "vitest -r __tests__ --bail=1 --run",
    "test:watch": "vitest -r __tests__ --bail=1",
    "build": "rimraf ./dist && tsc -b --force && cp src/argon-worker.js dist/",
    "prepublishOnly": "pnpm run build",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "format": "prettier --write \"**/*.{ts,tsx,json,md}\""
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.49.0",
    "@typescript-eslint/parser": "^8.49.0",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "prettier": "^3.7.4",
    "rimraf": "~6.0.0",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@frostr/bifrost": "^1.0.7",
    "@noble/hashes": "^2.0.1",
    "@welshman/lib": "^0.7.1",
    "@welshman/net": "^0.7.1",
    "@welshman/util": "^0.7.1",
    "base58-js": "^3.0.3",
    "hash-wasm": "^4.12.0",
    "nostr-tools": "^2.19.3",
    "zod": "^4.1.13"
  }
}
