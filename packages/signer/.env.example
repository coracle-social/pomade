# Nostr private key (hex or nsec format)
POMADE_SECRET=your_private_key_here

# Comma-separated list of relay URLs
POMADE_RELAYS=wss://relay1.example.com,wss://relay2.example.com

# Path to SQLite database file
POMADE_DB_PATH=./pomade-signer.db

# Email provider configuration
# Provider: postmark, sendgrid, mailgun, sendlayer, or resend
MAIL_PROVIDER=resend

# Email sender details
MAIL_FROM_EMAIL=noreply@example.com
MAIL_FROM_NAME=Pomade Signer

# Postmark configuration (when MAIL_PROVIDER=postmark)
POSTMARK_API_TOKEN=your_postmark_api_token

# SendGrid configuration (when MAIL_PROVIDER=sendgrid)
SENDGRID_API_KEY=your_sendgrid_api_key

# Mailgun configuration (when MAIL_PROVIDER=mailgun)
MAILGUN_API_KEY=your_mailgun_api_key
MAILGUN_DOMAIN=your_mailgun_domain
MAILGUN_API_REGION=us  # or "eu" for European region

# Sendlayer configuration (when MAIL_PROVIDER=sendlayer)
SENDLAYER_API_KEY=your_sendlayer_api_key

# Resend configuration (when MAIL_PROVIDER=resend)
RESEND_API_KEY=your_resend_api_key
