{
  "name": "pomade",
  "version": "0.0.0",
  "author": "hodlbod",
  "license": "MIT",
  "description": "Recovery protocol and implementation for nostr multisig signers.",
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">=12.0.0"
  },
  "type": "module",
  "files": [
    "dist"
  ],
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "test": "vitest -r __tests__ --bail=1",
    "build": "pnpm run clean && pnpm run compile --force",
    "clean": "rimraf ./dist",
    "compile": "tsc -b tsconfig.build.json",
    "prepublishOnly": "pnpm run build",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "format": "prettier --write \"**/*.{ts,tsx,json,md}\""
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.49.0",
    "@typescript-eslint/parser": "^8.49.0",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "prettier": "^3.7.4",
    "rimraf": "~6.0.0",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@frostr/bifrost": "^1.0.7",
    "@noble/hashes": "^2.0.1",
    "@welshman/lib": "^0.7.1",
    "@welshman/net": "^0.7.1",
    "@welshman/util": "^0.7.1",
    "base58-js": "^3.0.3",
    "nostr-tools": "^2.19.3",
    "vitest": "^4.0.15",
    "zod": "^4.1.13"
  },
  "pnpm": {
    "overrides": {
      "zod": "^4.1.13"
    }
  }
}
