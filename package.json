{
  "name": "pomade-monorepo",
  "version": "0.0.2",
  "private": true,
  "description": "Pomade monorepo - Recovery protocol and implementation for nostr multisig signers",
  "author": "hodlbod",
  "license": "MIT",
  "scripts": {
    "build": "pnpm --filter @pomade/core build && pnpm --filter @pomade/sqlite build && pnpm --filter @pomade/mailer build && pnpm --filter @pomade/signer build",
    "build:core": "pnpm --filter @pomade/core build",
    "build:sqlite": "pnpm --filter @pomade/sqlite build",
    "build:mailer": "pnpm --filter @pomade/mailer build",
    "build:signer": "pnpm --filter @pomade/signer build",
    "clean": "pnpm --recursive run clean",
    "test": "pnpm --filter @pomade/core test",
    "lint": "pnpm --filter @pomade/core lint",
    "lint:fix": "pnpm --filter @pomade/core lint:fix",
    "format": "pnpm --filter @pomade/core format",
    "check": "pnpm --filter @pomade/core check"
  },
  "devDependencies": {
    "rimraf": "~6.0.0",
    "typescript": "^5.9.3"
  },
  "pnpm": {
    "overrides": {
      "zod": "^4.1.13"
    }
  }
}

