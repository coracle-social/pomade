{
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "composite": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "target": "esnext",
    "sourceMap": true,
    "strict": true,
    "declaration": true,
    "declarationMap": true,
    "noEmitOnError": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "types": [],
    "lib": ["esnext"],
    "noEmit": false
  },
  "include": ["src/**/*"]
}
